<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PriceCollector.View.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Padding="15" HorizontalOptions="FillAndExpand">
            <Image
                Aspect="AspectFit"
                HorizontalOptions="Center"
                Source="price_collector_login.png" />
            <Entry Placeholder="Usuário" Text="{Binding UserName}" />
            <Entry
                IsPassword="True"
                Placeholder="Senha"
                Text="{Binding Password}" />
            <Button
                Margin="0,15,0,0"
                BackgroundColor="#FF6ED526"
                Command="{Binding LoginCommand}"
                Text="Login"
                TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>