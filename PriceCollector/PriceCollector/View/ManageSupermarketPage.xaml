<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PriceCollector.View.ManageSupermarketPage"
             Title="Editar Supermercado
             ">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_delete_white_24dp.png" Order="Primary"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="10,20,10,10">
            <Label Text="Atualizar informações referentes ao supermercado concorrente." HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
            <Entry Placeholder="Nome" Text="{Binding Name,Mode=TwoWay}" InputTransparent="True" />
            <Entry Placeholder="Rua" Text="{Binding Street,Mode=TwoWay}"/>
            <Entry Placeholder="Número" Text="{Binding Number,Mode=TwoWay}" Keyboard="Numeric"/>
            <Entry Placeholder="Bairro" Text="{Binding Neighborhood,Mode=TwoWay}"/>
            <Entry Placeholder="Cidade" Text="{Binding City,Mode=TwoWay}"/>
            <StackLayout Padding="10">
                <Button Text="Salvar" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand" TextColor="White" BackgroundColor="#26A726"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>